{% extends 'partials/base.twig' %}
{% block content %}
    {#Main section from side bar on the right #}
    <div id="main-content" class="container-fluid">
        <div class="columns">
            <div class="column is-12">
                <section class="section is-small mt-6">
                    <nav class="breadcrumb box has-background-dark" aria-label="breadcrumbs">
                        <ul>
                            <li><a class="is-size-5 has-text-white">Home</a></li>
                            <li><a class=" is-size-5 has-text-white">{{ title }}</a></li>
                        </ul>
                    </nav>
                    <div class="columns is-multiline">
                        <div class="column is-4">
                            <div class="card">
                                <div class="card-image">
                                    <figure class="image is-4by3" style="margin: 0 auto;">
                                        <img class="" src="/assets/uploads/profiles/{{ userData.profile_picture }}" />
                                    </figure>
                                </div>
                                <div class="card-content has-text-centered">
                                    <p class="mt-4 title is-size-6">
                                        {{ companyData.company_name ?? userData.firstname ~ ' ' ~ userData.lastname }}
                                    </p>
                                    <p>{{ username }}</p>
                                    <p>{{ companyData.phone ?? userData.phone }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="column is-8">
                            <div class="box">
                                <p class="title is-size-6">Personal Details</p>
                                <hr>
                                <div class="columns is-multiline">
                                    <div class="column is-half">
                                        <p>Name: {{ userData.firstname ~ ' ' ~ userData.lastname }}</p>
                                        <p>phone: {{ userData.Phone }}</p>
                                        <p>DOB: {{ userData.dob }}</p>
                                        <p>Address: {{ userData.address }}</p>
                                        <p>City: {{ userData.city }}</p>
                                    </div>
                                    <div class="column is-half">
                                        <p>Username: {{userData.username}}</p>
                                        <p>National Id: {{ userData.nationalCard }}</p>
                                        <p>Gender: {{ userData.gender }}</p>
                                        <p>Country: {{ userData.country }}</p>
                                        <p>Verification:
                                            {% if(userData.is_verified == 1)  %}
                                                {{ "Verified" }}
                                            {% else %}
                                                {{ "Unverified" }}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                <p class="title is-size-6">Occupational Information</p>
                                <hr>
                                <div class="columns is-multiline">
                                    <div class="column is-half">
                                        <p>Name: {{ userData.firstname ~ ' ' ~ userData.lastname }}</p>
                                        <p>phone: {{ userData.Phone }}</p>
                                        <p>DOB: {{ userData.dob }}</p>
                                        <p>Address: {{ userData.address }}</p>
                                        <p>City: {{ userData.city }}</p>
                                    </div>
                                    <div class="column is-half">
                                        <p>Username: {{userData.username}}</p>
                                        <p>National Id: {{ userData.nationalCard }}</p>
                                        <p>Gender: {{ userData.gender }}</p>
                                        <p>Country: {{ userData.country }}</p>
                                        <p>Verification:
                                            {% if(userData.is_verified == 1)  %}
                                                {{ "Verified" }}
                                            {% else %}
                                                {{ "Unverified" }}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                <p class="title is-size-6">Next of Kin</p>
                                <hr>
                                <div class="columns is-multiline">
                                    <div class="column is-half">
                                        <p>Name: {{ userData.firstname ~ ' ' ~ userData.lastname }}</p>
                                        <p>phone: {{ userData.Phone }}</p>
                                        <p>DOB: {{ userData.dob }}</p>
                                        <p>Address: {{ userData.address }}</p>
                                        <p>City: {{ userData.city }}</p>
                                    </div>
                                    <div class="column is-half">
                                        <p>Username: {{userData.username}}</p>
                                        <p>National Id: {{ userData.nationalCard }}</p>
                                        <p>Gender: {{ userData.gender }}</p>
                                        <p>Country: {{ userData.country }}</p>
                                        <p>Verification:
                                            {% if(userData.is_verified == 1)  %}
                                                {{ "Verified" }}
                                            {% else %}
                                                {{ "Unverified" }}
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                <p class="title is-size-6">Password Settings</p>
                                <hr>
                                <div class="columns is-multiline">
                                    <div class="column is-half">
                                        <div class="field">
                                            <label class=" is-size-7">New password</label>
                                            <input type="password" id="password" name="password" class="input is-link is-normal" placeholder="Enter new password">
                                        </div>
                                    </div>
                                    <div class="column is-half">
                                        <div class="field">
                                            <label class=" is-size-7">Confirm password</label>
                                            <input type="password" id="confirm_password" name="confirm_password" class="input is-link is-normal" placeholder="Confirm password">
                                        </div>
                                    </div>
                                    <div class="column is-half">
                                        <input type="hidden" name="userid" value="{{ userData.id }}">
                                        <button type="submit" id="changePasswordButton"  class="button is-success">Change Password</button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>
{% endblock %}